 DEF FN INC(X)=X+1 INPUT "BINARY FILE TO CONVERT";F$ CLS OPEN 2,8,2,F$+",S,R" OPEN 4,8,4,"@:"+F$+".BAS,S,W" EL=ST COUNT = 0 LOCATE 2,2:PRINT:PRINT:PRINT "WORKING.." LOOP1:     IF EL<>0 THEN CLEANUP     OUTSTRING$="DATA " LOOP2:     IF EL<>0 THEN CLEANUP     GET #2, C$     COUNT=FN INC(COUNT):LOCATE 2,2:PRINT COUNT;     EL=ST     C=ASC(C$)     OUTSTRING$=OUTSTRING$ + MID$(STR$(C),2)     IF LEN(OUTSTRING$)<185 AND EL=0 THEN OUTSTRING$=OUTSTRING$+",":GOTO LOOP2     PRINT# 4, OUTSTRING$:OUTSTRING$="":GOTO LOOP1CLEANUP: IF LEN(OUTSTRING$)>5 THEN PRINT#, 4,OUTSTRING$ PRINT#4 PRINT#4, "REM";COUNT;" BYTES CONVERTED" LOCATE 2,2:PRINT COUNT;" TOTAL BYTES":PRINT:PRINT CLOSE 4 CLOSE 2