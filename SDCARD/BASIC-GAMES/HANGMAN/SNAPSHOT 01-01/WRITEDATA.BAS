 DEF FN INC(X)=X+1 INPUT "BINARY FILE TO CONVERT";F$ CLS OPEN 2,8,2,F$+",S,R" OPEN 4,8,4,"@:"+F$+".BAS,S,W" EL=ST COUNT = 0 LOCATE 2,2:PRINT:PRINT:PRINT "WORKING.." LOOP:     IF EL<>0 THEN CLEANUP     PRINT#4,"DATA ";     FOR B = 1 TO 18        GET #2, C$        COUNT = FN INC(COUNT)        LOCATE 2,2:PRINT COUNT;        EL=ST        C=ASC(C$)        P$="$"+HEX$(C)        PRINT#4, P$;        IF B<18 AND EL=0 THEN PRINT#4, ",";        IF EL<>0 THEN B=18     NEXT B     PRINT#4   GOTO LOOPCLEANUP: PRINT#4 PRINT#4, "REM";COUNT;" BYTES CONVERTED" LOCATE 2,2:PRINT COUNT;" TOTAL BYTES":PRINT:PRINT CLOSE 4 CLOSE 2